extend ../../layouts/auth.pug
include ../../mixins/alert.pug

block main 
  +alert-success()
  +alert-error()

  .container 
    .login-container
      h1(class='titlePage') Đăng nhập 
      form(action='/admin/auth/login' method='POST' class='login-form row')

        div(class='form-group col-12')
          label(for='email') Email 
          input(id='email' name='email' type='email')

        div(class='form-group col-12')
          label(for='password') Mật khẩu 
          input(id='password' name='password' type='password') 

        button(type='submit' class='btn-submit') Đăng nhập

  style.
    .login-container {
      max-width: 400px;
      margin: 50px auto;
      padding: 20px;
      background: linear-gradient(135deg, #6e8efb, #a777e3);
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    .titlePage {
      color: #fff;
      font-size: 26px;
      font-weight: bold;
      margin-bottom: 20px;
    }

    .form-group {
      margin-bottom: 15px;
      text-align: left;
    }

    label {
      display: block;
      font-weight: bold;
      color: #fff;
      margin-bottom: 5px;
    }

    input {
      width: 100%;
      padding: 10px;
      border: none;
      border-radius: 5px;
      outline: none;
      font-size: 16px;
      transition: all 0.3s ease-in-out;
    }

    input:focus {
      box-shadow: 0 0 8px rgba(255, 255, 255, 0.6);
    }

    .btn-submit {
      width: 100%;
      padding: 10px;
      background-color: #ff6b6b;
      border: none;
      border-radius: 5px;
      color: #fff;
      font-size: 18px;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s ease-in-out;
    }

    .btn-submit:hover {
      background-color: #ff4757;
      transform: translateY(-2px);
    }
